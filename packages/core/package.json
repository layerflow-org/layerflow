{
  "name": "@layerflow/core",
  "version": "0.1.0",
  "description": "Core AST model, types, CRUD operations, validation and plugins for LayerFlow architecture graphs",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --coverageReporters=html --coverageReporters=text-summary",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "docs": "typedoc src/index.ts",
    "clean": "rm -rf dist coverage docs"
  },
  "keywords": [
    "layerflow",
    "architecture",
    "graph",
    "ast",
    "validation",
    "typescript"
  ],
  "author": "LayerFlow Team",
  "license": "MPL-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/layerflow-org/layerflow.git",
    "directory": "packages/core"
  },
  "bugs": {
    "url": "https://github.com/layerflow-org/layerflow/issues"
  },
  "homepage": "https://docs.layerflow.dev",
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.15.21",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^9.27.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "tsup": "^8.5.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
